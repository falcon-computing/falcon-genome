// update 1.01
pipeline {
agent {label 'merlin'}
    stages {
        stage ("build-local-falcon-genome") {
            steps {
                 dir("ws-falcon-genome") {
                    checkout scm
//                    git branch: 'devops', url: 'git@github.com:falcon-computing/falcon-genome.git'
                    sh "rm -rf release"
                    sh "mkdir release"
                    script {
                    dir("release"){
                        sh "rsync -av --exclude=.* /curr/limark/test/genome-release/build/local/ /curr/limark/falcon-local/"
                        sh "rsync -av --exclude=.* /curr/limark/test/genome-release/build/common/ /curr/limark/falcon-local/"
                        sh "source /curr/software/util/modules-tcl/init/bash"
                        sh "module load xrt; cmake -DCMAKE_BUILD_TYPE=Release -DRELEASE_VERSION=2.1 -DDEPLOYMENT_DST= -DCMAKE_INSTALL_PREFIX=/curr/limark/falcon-local/bin .."
                        sh "make -j 8"
                        sh "make install"
                        link = sh(returnStdout: true, script: 'cd /curr/limark/falcon-local/bin; link=s3://fcs-cicd-test/release/falcon-genome/fcs-genome; echo $link; echo $link > latest')
                        sh "cd /curr/limark/falcon-local/bin; aws s3 cp fcs-genome s3://fcs-cicd-test/release/falcon-genome/fcs-genome"
                        sh "cd /curr/limark/falcon-local/bin; aws s3 cp latest s3://fcs-cicd-test/release/falcon-genome/latest"
                        sh "cd /curr/limark/falcon-local/bin; rm -f latest"
                        }
                     }
                  }
               }    
            }
         }
    post {
            always {

                emailext attachLog: true, body: "${currentBuild.currentResult}: Job ${env.JOB_NAME} build ${env.BUILD_NUMBER}\n More info at: ${env.BUILD_URL}console",
                    recipientProviders: [[$class: 'DevelopersRecipientProvider'], [$class: 'RequesterRecipientProvider']],
                    subject: "Jenkins Build ${currentBuild.currentResult}: Job ${env.JOB_NAME}",
                    to: 'udara@limarktech.com, roshantha@limarktech.com'

        }
    }
}

